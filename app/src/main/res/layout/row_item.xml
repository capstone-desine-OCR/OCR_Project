<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/linearLayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              
              android:orientation="horizontal">

    <TextView
            android:id="@+id/list_number"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"/>

    <TextView
            android:id="@+id/list_code"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"/>

    <TextView
            android:id="@+id/list_origin"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"/>
    <TextView
            android:id="@+id/list_cultivar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"/>
    <TextView
            android:id="@+id/list_indate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"/>
    <TextView
            android:id="@+id/list_outdate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"/>
    <TextView
            android:id="@+id/list_weight"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"/>
    <TextView
            android:id="@+id/list_count"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"/>
    <TextView
            android:id="@+id/list_price"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"/>
    <TextView
            android:id="@+id/list_won"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"/>
    <TextView
            android:id="@+id/list_extra"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"/>
    <!-- Add the remaining TextViews in a similar manner -->

</LinearLayout>
